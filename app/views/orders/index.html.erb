<h2>All Orders</h2>

<% @orders.each do |order| %>
  <p>Name: <%= order.name %></p>
  <p>Email: <%= order.email %></p>
  <p>Line Items: <%= order.line_items.inspect %> </p>
  <ul>
    <% order.line_items.each do |item| %>
    <li><%= item.quantity %> x <%=  item.product.name %></li>
    <% end %>
  </ul>
<% end %>
